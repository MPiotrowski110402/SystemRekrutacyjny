{% extends 'layout.html.twig' %}

{% block content %}
    <h2 class="text-center mb-4">Lista Aplikacji</h2>

    {% if applications is not empty %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ImiÄ™</th>
                    <th>Nazwisko</th>
                    <th>E-mail</th>
                    <th>Telefon</th>
                    <th>LinkedIn</th>
                    <th>GitHub</th>
                    <th>CV</th>
                    <th>Akcja</th>
                </tr>
            </thead>
            <tbody>
                {% for application in applications %}
                    <tr>
                        <td>{{ application.id }}</td>
                        <td>{{ application.first_name }}</td>
                        <td>{{ application.last_name }}</td>
                        <td>{{ application.email }}</td>
                        <td>{{ application.phone }}</td>
                        <td>
                            {% if application.linkedin %}
                                <a href="{{ application.linkedin }}" target="_blank">LinkedIn</a>
                            {% else %}
                                Brak
                            {% endif %}
                        </td>
                        <td>
                            {% if application.github %}
                                <a href="{{ application.github }}" target="_blank">GitHub</a>
                            {% else %}
                                Brak
                            {% endif %}
                        </td>
                        <td>
                            {% if application.cv %}
                                <a href="{{ application.cv }}" target="_blank">Pobierz CV</a>
                            {% else %}
                                Brak
                            {% endif %}
                        </td>
                        <td>
                            <a href="index.php?page=aplication_detail&id={{ application.id }}" class="btn btn-info btn-sm">Zobacz</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-center">Brak aplikacji w systemie.</p>
    {% endif %}
{% endblock %}
